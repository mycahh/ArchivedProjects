---
    const { link, isCurrentPage, text } = Astro.props

    const className = isCurrentPage ? 'font-semibold' : ''
---
<a href={link} 
    class=`${className} text-gray-800 dark:text-gray-200 hidden md:inline-block p-1 sm:px-3 sm:py-2 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-800 transition-all`
>{text}</a>